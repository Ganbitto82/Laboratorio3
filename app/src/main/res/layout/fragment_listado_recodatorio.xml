<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListadoRecodatorioFragment">
    <TextView
        android:id="@+id/textLista"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50px"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Lista de Recordatorio"
        android:textSize="30sp"

         />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRecordatorio"
        android:layout_width="357dp"
        android:layout_height="462dp"
        android:layout_marginHorizontal="20px"
        android:layout_marginVertical="200px"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:scrollbars="vertical" />

</FrameLayout>